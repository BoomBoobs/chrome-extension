{
  "manifest_version": 2,
  "name": "Boom! ...boobs!",
  "description": "This extension enables randomly boobs' pictures in your facebook timeline.",
  "version": "1.0",
  "background": "src/background.js",
  "browser_action": {
    "default_icon": "icon.jpg",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.facebook.com/",
        "https://*.facebook.com/"
      ],
      "css": ["./src/styles/facebook.css"],
      "js": [ "build/bundle.js", "node_modules/jquery/dist/jquery.min.js" ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "http://*.facebook.com/",
    "https://*.facebook.com/"
  ]
}
