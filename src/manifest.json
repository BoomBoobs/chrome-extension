{
  "manifest_version": 2,
  "name": "Boom! ...boobs!",
  "description": "This extension enables randomly boobs' pictures in your facebook timeline.",
  "update_url": "https://github.com/BoomBoobs/chrome-extension/raw/master/package/update.xml",
  "version": "1.0",
  "background": "background.js",
  "browser_action": {
    "default_icon": "icon.jpg",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*.facebook.com/",
        "https://*.facebook.com/"
      ],
      "css": ["./styles/facebook.css"],
      "js": [ "bundle.js" ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "http://*.facebook.com/",
    "https://*.facebook.com/"
  ]
}
